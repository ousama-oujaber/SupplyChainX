pipeline {
    agent any
    
    environment {
        // Docker configuration (optional - remove Docker stages if not needed)
        DOCKER_IMAGE = 'your-dockerhub-username/supplychainx'
        IMAGE_TAG = "${BUILD_NUMBER}"
    }
    
    tools {
        maven 'Maven-3.9.6'
        jdk 'JDK-17'
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ“¦ Checking out code from GitHub...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'ğŸ”¨ Building application with Maven...'
                sh 'mvn clean compile -DskipTests'
            }
        }
        
        stage('Test') {
            steps {
                echo 'ğŸ§ª Running unit tests...'
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        
        stage('Code Quality') {
            steps {
                echo 'ğŸ“Š Running JaCoCo code coverage...'
                sh 'mvn jacoco:report'
            }
            post {
                always {
                    jacoco(
                        execPattern: '**/target/jacoco.exec',
                        classPattern: '**/target/classes',
                        sourcePattern: '**/src/main/java'
                    )
                }
            }
        }
        
        stage('Package') {
            steps {
                echo 'ğŸ“¦ Packaging application...'
                sh 'mvn package -DskipTests'
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Pipeline completed successfully!'
            echo "ğŸ“¦ Artifact: target/SupplyChainX-0.0.1-SNAPSHOT.jar"
        }
        failure {
            echo 'âŒ Pipeline failed! Check the logs above.'
        }
        always {
            echo 'ğŸ§¹ Build finished.'
        }
    }
}
