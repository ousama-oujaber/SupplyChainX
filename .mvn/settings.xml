<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.0.xsd">
    
    <!-- Local Repository Path -->
    <localRepository>/var/jenkins_home/.m2/repository</localRepository>
    
    <!-- Offline Mode -->
    <offline>false</offline>
    
    <!-- Mirror Repositories for Redundancy -->
    <mirrors>
        <!-- Aliyun Mirror (Fast for Asian regions) -->
        <mirror>
            <id>aliyun-central</id>
            <mirrorOf>central</mirrorOf>
            <name>Aliyun Maven Central Mirror</name>
            <url>https://maven.aliyun.com/repository/central</url>
        </mirror>
        
        <!-- UK Maven Central Mirror -->
        <mirror>
            <id>uk-central</id>
            <mirrorOf>central</mirrorOf>
            <name>UK Maven Central Mirror</name>
            <url>https://uk.maven.org/maven2</url>
        </mirror>
    </mirrors>
    
    <!-- Profiles for Repository Configuration -->
    <profiles>
        <profile>
            <id>default-profile</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            
            <repositories>
                <!-- Maven Central (Primary) -->
                <repository>
                    <id>central</id>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                        <checksumPolicy>warn</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                
                <!-- Spring Repository (Fallback) -->
                <repository>
                    <id>spring-releases</id>
                    <url>https://repo.spring.io/release</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                
                <!-- JCenter (Additional Fallback) -->
                <repository>
                    <id>jcenter</id>
                    <url>https://jcenter.bintray.com</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
            
            <pluginRepositories>
                <!-- Maven Central Plugins -->
                <pluginRepository>
                    <id>central</id>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
                
                <!-- Spring Plugin Repository -->
                <pluginRepository>
                    <id>spring-releases</id>
                    <url>https://repo.spring.io/release</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
            
            <!-- Properties for Network Timeout and Retry -->
            <properties>
                <maven.wagon.http.retryHandler.count>3</maven.wagon.http.retryHandler.count>
                <maven.wagon.http.pool>false</maven.wagon.http.pool>
                <maven.wagon.httpconnectionManager.ttlSeconds>120</maven.wagon.httpconnectionManager.ttlSeconds>
                <maven.wagon.http.ssl.insecure>false</maven.wagon.http.ssl.insecure>
                <maven.wagon.http.ssl.allowall>false</maven.wagon.http.ssl.allowall>
            </properties>
        </profile>
    </profiles>
    
    <activeProfiles>
        <activeProfile>default-profile</activeProfile>
    </activeProfiles>
</settings>
